page {
  background: #efefef;
}
button {
  font-size: 28rpx;
  background-color: #fff;
  border: none;
  padding: 0;
  margin: 0;
  line-height: 1;
  text-align: left;
  color: #fff;
}
input {
  outline: none;
  border: none;
  list-style: none;
}
button::after {
  border: none;
}
.me {
  width: 750rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: url('http://q.img.blmdz.cn/home/2018101201131575348363.png') no-repeat;
  background-size: 100% 300rpx;
}
.me_t {
  width: 690rpx;
  height: 200rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.me_t_i {
  width: 144rpx;
  height: 144rpx;
  border-radius: 50%;
  border: 6rpx solid #fff;
}
.me_t_c {
  width: 400rpx;
  color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.me_t_c_n {
  font-size: 0.9rem;
}
.me_t_c_i {
  font-size: 0.7rem;
  margin-top: 6rpx;
}
.me_t_e {
  width: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.me_t_e_i {
  width: 40rpx;
  height: 40rpx;
}
.me_c {
  background: #fefefe;
  width: 690rpx;
  height: 200rpx;
  display: flex;
  border-radius: 5rpx;
}

.me_l_p {
  width: 700rpx;
  padding: 25rpx;
  background: #fff;
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.me_l_p_l {
  height: 60rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.me_l_p_l_i {
  height: 60rpx;
  width: 60rpx;
  padding: 0 20rpx 0 0;
}
.me_l_p_l_f {
  font-size: 0.9rem;
}
.me_l_p_r {
  height: 60rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 0 10rpx 0 0;
}
.me_l_p_r_f {
  font-size: 0.8rem;
  color: #555;
  padding: 0 20rpx 0 0;
}
.me_l_p_r_a {
  height: 20rpx;
  width: 20rpx;
  border-top: 3px solid #ccc;
  border-right: 3px solid #ccc;
  transform: rotate(45deg);
}
